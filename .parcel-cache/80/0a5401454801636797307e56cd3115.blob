*{margin: 0;padding: 0;box-sizing: border-box;}
*::after,*::before{box-sizing: border-box;}

.skin{
    background-color: #fee433;
    height: 100vh;
}
.nose{
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 12px;
    border-color: black transparent transparent;
    border-radius: 11px;
    position: absolute;
    left: 50%;
    top: 220px;
    margin-left: -10px;
}
.eye{
    border: 2px solid black;
    width: 64px;
    height: 64px;
    background: #2e2e2e;
    position: absolute;
    left: 50%;
    border-radius: 50%;
    top: 180px;
}
.eye.left{
    margin-left: -100px;
}